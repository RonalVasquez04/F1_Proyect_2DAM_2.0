<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<PreferenceCategory android:title="Chat">

    <EditTextPreference android:title="User"
        android:key="signature"
        app:useSimpleSummaryProvider="true"
        />
    <SwitchPreferenceCompat
        app:key="syncLogin"
        app:title="Remenber login" />
    <ListPreference
        android:key="color"
        android:title="Choose a color"
        android:summary="Select your preferred color"
        android:entries="@array/color_options"
        android:entryValues="@array/color_values"
        android:defaultValue="0" />

</PreferenceCategory>

    <PreferenceCategory android:title="Caché">
        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Store caché" />

    </PreferenceCategory>




    <PreferenceCategory android:title="General">
        <CheckBoxPreference
            android:key="syncCheck"
            android:title="Vibrate"/>

    </PreferenceCategory>

</PreferenceScreen>